@startuml
actor Patient
actor "Staff (Receptionist)" as Receptionist
actor "Staff (Nurse)" as Nurse
actor Doctor

usecase "Schedule Appointment" as UC1
usecase "Manage Appointment" as UC2
usecase "Register Patient Visit" as UC3
usecase "Check Vitals" as UC4
usecase "Update Medical Record" as UC5
usecase "Diagnose Patient" as UC6
usecase "View Medical Record" as UC7

Patient -- UC1
Patient -- UC7
Receptionist -- UC1
Receptionist -- UC2
Receptionist -- UC3
Nurse -- UC4
Nurse -- UC5
Doctor -- UC5
Doctor -- UC6

@enduml